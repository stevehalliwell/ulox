fun Add(a,b) {return a+b;}
fun Sub(a,b) {return a-b;}

// built in testing, test defines a set of tests
test SimpleTest
{
	// testcase defines a single testmethod in the set
	testcase Expect
	{
		var lhs = 1;
		var rhs = 2;

		var res = Sub(lhs,rhs);

		expect -1 == res : "1 minus 2 should be -1";
	}
	
	testcase ManuallyThrow
	{
		var lhs = 1;
		var rhs = 2;

		var res = Add(lhs,rhs);

		if(res != 3)
			throw "1 + 2 Should be 3.";
	}
	
	testcase AssertLibrary
	{
		var lhs = 1;
		var rhs = 2;

		var res = Sub(lhs,rhs);

		Assert.AreEqual(-1, res);
	}
}
// The complier emits code to run the tests at the end of their block