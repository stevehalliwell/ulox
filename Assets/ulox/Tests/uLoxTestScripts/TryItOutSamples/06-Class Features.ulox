// init is called when an instance is created
class WithInitVal
{
	init(val)
	{
		// this keyword gets access to the instance currently running the method
		this.val = val;
	}
}

var foo = WithInitVal(7);
print(foo.val);

// class vars are initialised prior to init
class WithVars
{
	var val = 7;
	init()
	{
		print(this.val);
	}
}

foo = WithVars();
print(foo.val);

// classes with vars and inits will auto assign matching names
class WithVarMatchingInit
{
	var val;
	init(val){}
}

foo = WithVarMatchingInit(7);
print(foo.val);

// auto init of vars also works with inher by matching the names of the parent init
class ABAutoInitBase
{
    var a = 1,b;
    init(b){}
}

class CDAutoInitChild < ABAutoInitBase
{
    var c = 3,d;
    init(b,d){}
}

var cinst = CDAutoInitChild(2,4);